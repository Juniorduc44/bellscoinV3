{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Console Debug Run",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/bitcoind",
            "args": ["-printtoconsole"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        },        
        {
            "name": "Regtest run",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/bitcoind",
            "args": ["-regtest", "-rpcport=18443", "-deprecatedrpc=create_bdb"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "UI Debug Run",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/qt/bitcoin-qt",
            "args": ["-debug=all"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Test bitcoin qt",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/qt/test/test_bells-qt",
            "args": ["-loglevel=trace", "-printtoconsole"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Test bitcoin ",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/test/test_bitcoin",
            "args": ["--run_test=pow_tests/get_next_work"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
